{% extends 'base.html.twig' %}

{% block title %}
    Twyrael - Connexion
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Connexion</h1>

    <form action="{{ path('security_connexion') }}" method="post">
        <div class="form-group">
            <label class="required" for="_username">Adresse email</label>
            <input placeholder="Adresse email" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label class="required" for="_password">Mot de passe</label>
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}